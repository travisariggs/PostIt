<div class='well'>
  <%= form_for @user do |u| %>
    <div class='control-group'>
      <%= u.label :username %>
      <%= u.text_field :username %>
    </div>

    <div class='control-group'>
      <%= u.label :password %>
      <%= u.password_field :password %>
    </div>

    <div class='control-group'>
      <%= u.label :timezone_string %>
      <%= u.text_field :timezone_string %>
    </div>

    <%= u.submit('Update', class: 'btn btn-primary') %>
  <% end %>
</div>