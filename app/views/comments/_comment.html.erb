<% show_post ||= false %>

<% begin %>
  <div class='span8 well'>
    <em>"<%= comment.body %>"</em>
    <% if show_post %>
      on <%= link_to comment.post.title, post_path(comment.post) %>
    <% end %>
    <br/>
    <span class='quiet'>by</span> <%= link_to(comment.user.username, user_path(comment.user)) %>
    <small>on <%= format_time(comment.created_at) %></small>
  </div>
<% rescue %>
<% end %>